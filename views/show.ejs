<%- include("partials/header")%>
<div class="ui main text container segment" style="margin-top: 10em;">

    <div class="ui huge header"><%= blog.title %></div>
     <div class="ui top attached segement">
         <div class="item">
             <img class="ui centered rounded image" src="<%= blog.image%>">
             <div class="content">
                 <span>
                     <%= blog.created.toDateString()%></span>
             </div>
             <div class="description">
                 <%- blog.body%>
             </div>
             <form action="/blog/<%=blog._id%>?_method=delete" method="POST">
                <a href="/blog/<%=blog._id%>/edit" class="ui inverted olive button">Edit</a>
                <button class="ui inverted red button">Delete</button>
            </form>
             </div>
         </div>
     </div>
</div>










<%- include("partials/footer") %>